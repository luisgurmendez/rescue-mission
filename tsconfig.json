{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
  ],
  "include": [
    "src/index.html",
    "src/*.ts",
    "src/**/*.ts",
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "types": [],
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}